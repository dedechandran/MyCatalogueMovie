<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="CardMovieFavorite" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="CardMovieFavorite.Detail">
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TextMovie" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextMovie.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000</item>
        <item name="android:layout_marginBottom">18dp</item>
    </style>

    <style name="TextMovie.Overview">
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="TextMovie.ReleaseDate">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="ButtonMoviewItem" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">.5</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="ButtonMoviewItem.Detail">
        <item name="android:text">@string/detail</item>
    </style>

    <style name="ButtonMoviewItem.share">
        <item name="android:text">@string/share</item>
    </style>


    <style name="TextDetailMovie" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#444444</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="TextDetailMovie.Header">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextDetailMovie.Content">

        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextDetailMovie.Content.Label">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">.4</item>
    </style>

    <style name="TextDetailMovie.Content.Value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">.6</item>
    </style>

    <style name="separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:background">#222</item>
    </style>
</resources>
